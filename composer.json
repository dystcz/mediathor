{
    "name": "dystcz/mediathor",
    "description": "MediaThor will help you setup your media workflow with the speed of lightning âš¡",
    "keywords": [
        "dystcz",
        "mediathor"
    ],
    "homepage": "https://github.com/dystcz/mediathor",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Jakub Theimer",
            "email": "jakub@dy.st",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^9.0|^10.0"
    },
    "require-dev": {
        "driftingly/rector-laravel": "^0.17.0",
        "laravel/pint": "^1.7",
        "nunomaduro/larastan": "^2.5.1",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "rector/rector": "^0.15.23",
        "spatie/laravel-ray": "^1.32"
    },
    "autoload": {
        "psr-4": {
            "Dystcz\\Mediathor\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dystcz\\Mediathor\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "analyse": "vendor/bin/phpstan analyse"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Dystcz\\Mediathor\\MediaThorServiceProvider"
            ],
            "aliases": {
                "Mediathor": "Dystcz\\MediaThor\\Facades\\MediaThor"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
